@model IEnumerable<Project_10.Models.Product>

@{
    ViewBag.Title = "Index4";
    Layout = "~/Views/Shared/_Layout2.cshtml";

}
<style>
    .Product-Info{
        display:flex;
        flex-wrap:wrap;
        justify-content:space-around;
    }
</style>

    @foreach (var item in Model)
    {

        <!-- Product section-->
        <section class="py-5">
            <div class="container " style="text-align:center">
                <div class="row  align-items-center">
                    <div class="col-md-5"><img class="card-img-top mb-5 mb-md-0" src="~/Images/@item.ProductImage" alt="..." /></div>
                    @*<img src="~/Images/@item.ProductImage" style="height: 290px; width: 96%; border-radius: 10px " alt="">*@
                <div class="col-md-6">
                    <div class="Product-Info">
                        <h4 class="col-md-4">Product Name</h4>
                   <h1 class="col-md-3"> @item.ProductName</h1>
                    <p class="lead">@item.ProductDescription</p> <br />
                    <div class="fs-5 mb-5">
                        <span> @item.price $</span>
                    </div>

                    <div class="d-flex " style="margin-left:33%">
                        @*<button class="btn btn-outline-dark flex-shrink-0" type="button">
                <i class="bi-cart-fill me-1"></i>
                Add to cart
            </button>*@
                        @*<a class="option1" href="@Url.Action("Buy", "Carts", new { id = item.ProductId })"> Add To Cart</a>*@

                    </div>
                    @using (Html.BeginForm("Buy", "Carts", FormMethod.Post))
                    {
                       
                        <input hidden type="number" value="@item.ProductId" name="id"/>
                        <input class="form-control text-center me-3" min="0" id="inputQuantity" name="Quantity" type="number" value="1" style="max-width: 4rem" />
                        <button type="submit" class="btn btn-primary mt-3">Add To Cart</button>

                    }
                        
                    </div>
                </div>


                    </div>
            </div>
        </section>

    }








