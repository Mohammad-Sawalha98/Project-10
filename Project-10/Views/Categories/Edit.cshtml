@model Project_10.Models.Category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminCRUD.cshtml";

}




<main class="main-content  mt-0">
    <section>
        <div class="page-header min-vh-75">
            <div class="container">
                <div class="row">
                    <div class="col-xl-7 col-lg-6 col-md-6 d-flex flex-column mx-auto">
                        <div class="card card-plain mt-8" style="margin-top:20px !important">
                            <div class="card-header pb-0 text-left bg-transparent">
                                <h3 class="font-weight-bolder text-info text-gradient">Edit</h3>

                            </div>
                            <!-- Form start -->
                            <div class="card-body">


                                @using (Html.BeginForm("Edit", "Categories", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-horizontal">
                                        <h4>Category</h4>
                                        <hr />
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        @Html.HiddenFor(model => model.CategoryId)

                                        <div class="form-group">
                                            <label>Category Name</label>
                                            <div class="mb-3">
                                                @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label>Category Description</label>
                                            <div class="mb-3">
                                                @Html.EditorFor(model => model.CategoryDescription, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.CategoryDescription, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label>Category Image</label>
                                            <div class="mb-3">
                                              


                                                <div class="mb-3">
                                                    <input type="file" name="CategoryImage" value="" accept="image/*" class="form-control" />
                                                </div>


                                                @Html.ValidationMessageFor(model => model.CategoryImage, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                     
                                        <div class="text-center">
                                            <input type="submit" value="Save" class="btn bg-gradient-info w-100 mt-4 mb-0" />
                                        </div>
                                        <br />
                                    </div>
                                }

                                @*<div>
            @Html.ActionLink("Back to List", "Index")
        </div>*@

                                @*@section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }*@




                                <div class="text-center">
                                    <a href="/Categories/Index" class="btn bg-gradient-dark w-100">
                                        Back to List
                                    </a>
                                </div>

                            </div>


                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
</main>
